<application>

  <name>Camera Calibration Gazebo Random App</name>

  <module>
      <name>gzserver</name>
      <parameters>camera-calibration-random.sdf</parameters>
      <node>localhost</node>
  </module>

  <module>
      <name>gzclient</name>
      <node>localhost</node>
  </module>

  <module>
      <name>movePattern</name>
      <node>localhost</node>
  </module>
  
  <module>
      <name>yarpdatadumper</name>
      <parameters>--name /random-images --type image_png</parameters>
      <node>localhost</node>
  </module>

  <module>
      <name>yarpview</name>
      <parameters>--name /view_left</parameters>
      <node>localhost</node>
  </module>

  <connection>
      <from>/movePattern/mover:o</from>
      <to>/random/mover:i</to>
      <protocol>fast_tcp</protocol>
  </connection>

  <connection>
      <from>/icubSim/cam/left/rgbImage:o</from>
      <to>/view_left</to>
      <protocol>fast_tcp</protocol>
  </connection>

  <connection>
      <from>/icubSim/cam/left/rgbImage:o</from>
      <to>/random-images</to>
      <protocol>fast_tcp</protocol>
  </connection>

</application>
