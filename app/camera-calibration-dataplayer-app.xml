<application>

  <name>Camera Calibration Dataplayer App</name>

  <module>
      <name>yarpdataplayer</name>
      <node>localhost</node>
  </module>

  <module>
      <name>stereoCalib</name>
      <node>localhost</node>
  </module>

  <module>
      <name>yarpview</name>
      <parameters>--name /view_left</parameters>
      <node>localhost</node>
  </module>

  <module>
      <name>yarpview</name>
      <parameters>--name /mono_calib</parameters>
      <node>localhost</node>
  </module>

  <connection>
      <from>/icub/camcalib/left/out</from>
      <to>/stereoCalib/cam/left:i</to>
      <protocol>fast_tcp</protocol>
  </connection>

  <connection>
      <from>/icub/camcalib/left/out</from>
      <to>/view_left</to>
      <protocol>fast_tcp</protocol>
  </connection>

  <connection>
      <from>/stereoCalib/cam/left:o</from>
      <to>/mono_calib</to>
      <protocol>fast_tcp</protocol>
  </connection>

</application>
