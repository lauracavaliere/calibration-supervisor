<application>
    <name>Event Cam Calib Supervisor App</name>

    <module>
      <name>calibSupervisor</name>
      <parameters>--file calibrations_event-cameras.ini --eventCam true --stereo false</parameters>
      <node>localhost</node>
    </module>
    
    <module>
      <name>stereoCalib</name>
      <parameters>--from icubEyes_ATIS_test.ini --MonoCalib 1</parameters>
      <node>localhost</node>
    </module>    

    <module>
        <name>yarpview</name>
        <node>localhost</node>
        <parameters>--name /display --x 300 --y 0</parameters>
    </module>

    <module>
        <name>yarpview</name>
        <node>localhost</node>
        <parameters>--name /sendtocalib --x 600 --y 0</parameters>
    </module>
    
    <module>
        <name>yarpview</name>
        <node>localhost</node>
        <parameters>--name /stereocalib --x 600 --y 0</parameters>
    </module>

    <connection>
        <from>/vFramer/left/image:o</from>
        <to>/calibSupervisor/imageLeft:i</to>
        <protocol>fast_tcp</protocol>
    </connection>
    <connection>
        <from>/vFramer/right/image:o</from>
        <to>/calibSupervisor/imageRight:i</to>
        <protocol>fast_tcp</protocol>
    </connection>
    
    <connection>
        <from>/calibSupervisor/imageRight:o</from>
        <to>/stereoCalib/cam/right:i</to>
        <protocol>fast_tcp</protocol>
    </connection>
    
    <connection>
        <from>/stereoCalib/cam/left:o</from>
        <to>/stereocalib</to>
        <protocol>fast_tcp</protocol>
    </connection>
    
    <connection>
        <from>/calibSupervisor/display:o</from>
        <to>/display</to>
        <protocol>fast_tcp</protocol>
    </connection>
    <connection>
        <from>/calibSupervisor/imageLeft:o</from>
        <to>/sendtocalib</to>
        <protocol>fast_tcp</protocol>
    </connection>
    
    <connection>
        <from>/calibSupervisor/imageLeft:o</from>
        <to>/stereoCalib/cam/left:i</to>
        <protocol>fast_tcp</protocol>
    </connection>
        
</application>
